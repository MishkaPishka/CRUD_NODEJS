        <!--        </li>-->
        <!--    <% } %>-->
        <!--</ul>-->
    <!--<% } %>-->
</div>


    <div  style="float:left">
        <h2>SECTORS</h2>

        <%if (sectors_dictionary  != null) { %>
            <ul >
                <% for(var key in sectors_dictionary) { %>
                    <li style="padding-bottom: 10px;">
                        <span ><a href ='/sectors/<%= sectors_dictionary[key] %>' > <%= sectors_dictionary[key] %> </a></span>
                    </li>

                <% } %>
            </ul>
        <% } %>

    </div>

    <div style="display: inline-block;padding-left: 25%;margin-top: 5%;">


        <form style='padding-bottom: 10px;' action="/stocks" method="GET">
            <button type="submit" method="GET">Go to main stocks page</button>

        </form>

        <form  action="/sectors" method="GET">
            <button type="submit">Go to main sectors page</button>
        </form>

        <form style="margin-top: 20px;" action="/" method="POST">
            <button type="submit">Search Stock By Name</button>
            <br>
            <br>
            <input type="text" placeholder="name" name="name">
        </form>
        <%if (featured  != null) { %>
            <ul class="featured stock">
                <li class="stocks">
                    <span class="stock"><a href ='/stocks/<%= featured.Name %>' ><%= featured.Name %></a></span>
                    <span class="stock" >  <a href ='/stocks/<%= featured.Name %>' ><%= featured.Symbol %></a></span>
                    <span class="stock" >  <a href ='/sectors/<%= featured.Sector %>' ><%= featured.Sector %></a></span>

                </li>
            </ul>
        <% } %>

    </div>






</body>
